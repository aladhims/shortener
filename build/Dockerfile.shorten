FROM golang:latest as builder

WORKDIR /go/src/github.com/aladhims/shortener

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build  -o shorten-service -a -installsuffix cgo ./cmd/shorten/main.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates

RUN mkdir /app
WORKDIR /app
COPY --from=builder /go/src/github.com/aladhims/shortener/shorten-service .


CMD ["./shorten-service"]